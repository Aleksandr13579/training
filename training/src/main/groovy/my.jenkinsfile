pipeline {
    agent any

    options ( timestamps() )


    parameters {
        string ( name: 'SERVER_IP', description: 'Enter your sereves ip address (delimiter is \", \" )' )
    }

    stages {
        stage('input') {
            input {
                message 'Enter string'
                ok 'ok!'
                parameters {
                    string( name: 'STR', defaultValue: 'one,two,three' )
                }
            }
            steps {
                script {
                    arrayStr = "${STR}".split(',')
                    arrayStr.each { println(it.toString()) }
                }
                echo "${arrayStr}"
            }
        }
        stage('two') {
            steps {
                echo 'hello'
            }
        }
    }
}